    <!-- Begin page content -->
    <main role="main" class="container">
        <div class="flex-container">
            <div>
            <canvas id= "canvas" width="850" height="550"></canvas>
            </div>
            <div class="flex-container">
                <div><button type="button" class="button" onClick="clearDrawing()">Clear</button></div>
                <!-- <div><button type="button" class="button" onClick="clearDrawing()">Clear</button></div> -->
                <div><button type="button" class="button" onClick="save()">Save</button></div>
                <div><button type="button" class="button" id="load" onClick="load()">Load</button></div>

                
                <div><button class="round-button red selected" style="background: red;" onClick="selectColor('red')"></button></div>
                <div><button class="round-button blue selected" style="background: blue;" onClick="selectColor('blue')"></button></div>
                <div><button class="round-button green selected" style="background: green;" onClick="selectColor('green')"></button></div>

                <div><input type="color" class="color-picker"onInput="selected_color=this.value"></div>
                <div><input type="range" min="1" max="100" class="pen-range" onInput="selected_width=this.value"></div>
            </div>
        </div>
        
